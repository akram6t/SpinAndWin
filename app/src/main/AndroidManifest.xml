<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    package="com.spinandwin.quizme">

    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission
        android:name="android.permission.ACCESS_WIFI_STATE"
        tools:node="remove" />
    <uses-permission android:name="android.permission.READ_EXTERNAL_STORAGE" />

    <application
        android:allowBackup="true"
        android:icon="@drawable/spin"
        android:label="@string/app_name"
        android:roundIcon="@drawable/spin"
        android:supportsRtl="true"
        android:theme="@style/Theme.SpinAndWin">
        <activity
            android:name=".activities.QuizResultActivity"
            android:exported="true" />
        <activity
            android:name=".activities.ProfileActivity"
            android:exported="true" />
        <activity
            android:name=".activities.SplashActivity"
            android:exported="true">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".activities.AuthActivity"
            android:exported="true" />
        <activity
            android:name=".activities.QuizActivity"
            android:exported="true" />
        <activity
            android:name=".activities.WithdrawActivity"
            android:exported="true" />
        <activity
            android:name=".activities.RankActivity"
            android:exported="true" />
        <activity
            android:name=".activities.QuizListActivity"
            android:exported="true" />
        <activity
            android:name=".activities.LuckyNumberActivity"
            android:exported="true" />
        <activity
            android:name=".activities.ScratchActivity"
            android:exported="true" />
        <activity
            android:name=".activities.SpinActivity"
            android:exported="true" />
        <activity
            android:name=".activities.MainActivity"
            android:exported="true" />

        <meta-data
            android:name="preloaded_fonts"
            android:resource="@array/preloaded_fonts" />
        <meta-data
            android:name="com.startapp.sdk.APPLICATION_ID"
            android:value="211296698" />
        <meta-data android:name="com.startapp.sdk.RETURN_ADS_ENABLED"
            android:value="false" />
    </application>

</manifest>